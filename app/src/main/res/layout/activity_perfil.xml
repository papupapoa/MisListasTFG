<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris_negruzco"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/logoPerfil"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/iconapp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:contentDescription="Logo app"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/tvPerfil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perfil de usuario"
        android:textColor="@color/blanco"
        android:textSize="22sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/ivFotoPerfil"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_launcher_foreground"
        android:background="@drawable/circle_background"
        android:scaleType="centerCrop"
        android:layout_marginTop="32dp"
        android:contentDescription="Foto de perfil" />

    <Button
        android:id="@+id/btnCambiarFoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar foto"
        android:textColor="#000000"
        android:backgroundTint="#6cf3d5"
        android:layout_marginTop="12dp" />

    <Button
        android:id="@+id/btnCambiarNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cambiar nombre de usuario"
        android:textColor="#000000"
        android:backgroundTint="#6cf3d5"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/btnCambiarCorreo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cambiar correo"
        android:textColor="#000000"
        android:backgroundTint="#6cf3d5"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnCambiarPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cambiar contraseña"
        android:textColor="#000000"
        android:backgroundTint="#6cf3d5"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnCerrarSesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cerrar sesión"
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/red"
        android:layout_marginTop="32dp" />
</LinearLayout>
